<div class="index-background">

  <div class="container">
    <h1>Tools To Rent</h1>

    <div class="row">
      <% @tools.each do |tool| %>
        <div class="col-4">

          <%= link_to tool_path(tool), id: "tool-name" do %>
              <div class="card flex-column no-gutters my-3">
                <%= image_tag tool.image, class: "card-img-top", id: "card-image-index" if tool.image %>
                <div class="card-body d-flex justify-content-between">
                  <h5 class="card-title" id="tool-name"><%= tool.tool_name %> </h5>
                  <h5 class="card-price"> Â£<%=  tool.price %> </h5>
                </div>
              </div>
            <% end %>
        </div>
        <% end %>
    </div>
  </div>
</div>
