<div class="index-background">

  <div class="container">
    <h1>Tools To Rent</h1>

    <div class="row">
      <% @tools.each do |tool| %>
        <div class="col-4">
          <%= link_to tool_path(tool) do %>
            <div class="card flex-column no-gutters my-3">
              <% if tool.photo.attached? %>
              <%= cl_image_tag tool.photo.key,  width: 300, height: 300, class: "card-img-top"%>
              <% else %>
              <%= image_tag tool.image, class: "card-img-top", id: "card-image-index" if tool.image %>
              <% end %>
              <div class="card-body d-flex justify-content-between">
                <h5 class="card-title "><%= tool.tool_name %> </h5>
                <h5 class="card-price"> Â£<%=  tool.price %> </h5>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
