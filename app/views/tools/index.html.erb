<div class="container">

  <h1>Tools To Rent</h1>

  <div class="row">
    <% @tools.each do |tool| %>
      <div class="col-12 col-sm-6 col-lg-4 p-3">
        <%# <ul> %>
        <% if tool.photo.attached? %>
        <%= cl_image_tag tool.photo.key,  width: 300, height: 300, class: "tool-images"%>
        <% else %>
        <%= image_tag tool.image, width: 300, height: 300, class: "tool-images" if tool.image %>
        <% end %>
        <div>
          <p> <%= link_to tool.tool_name, tool_path(tool) %> </p>
        </div>
        <%# </ul> %>
      </div>
    <% end %>
  </div>

</div>


