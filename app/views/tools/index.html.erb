<div class="index-background">

  <div class="container">
    <h1>Tools To Rent</h1>

    <div class="row">
      <% @tools.each do |tool| %>
        <div class="col-4">
          <%= link_to tool_path(tool) , class: "text-decoration-none" do %>
            <div class="card flex-column no-gutters my-3">
              <% if tool.photo.attached? %>
              <%= cl_image_tag tool.photo.key,  width: 300, class: "card-img-top"%>
              <% else %>
              <%= image_tag tool.image, width: 300, height: 254, class: "card-img-top" if tool.image %>
              <% end %>
              <div class="card-body d-flex justify-content-between flex-column">
                <div class="d-flex flex-row justify-content-between">
                  <h5 class="card-title "><%= tool.tool_name %> </h5>
                  <h5 class="card-price"> Â£<%=  tool.price %> </h5>
                </div>
                <div class="">
                  <p><%= tool.description.first(50) %>...</p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
