<div class="showbgimg">
  <div class="container p-5 " style="width: 800px">
    <div class="showcard">
        <div class="text-center">
          <h1>
          <%= @tool.tool_name %>
          </h1>
              <h2>
                <%= @tool.category %>
              </h2>
              <p>
                <%= @tool.description %>
              </p>
        </div>


        <div data-controller="toggle" class="container  p-5" style="width: 800px">
            <button data-action="click->toggle#fire" class="btn btn-outline-primary">Book your tool!</button>

          <div data-toggle-target="togglableElement" class="booking-form d-none">
            <%= simple_form_for [@tool, @booking] do |f| %>
            <%= f.input :start_date, html5: true %>
            <%= f.input :end_date, html5: true %>
            <%= f.submit %>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
